class Solution{
    public:
    long long findMinDiff(vector<long long> a, long long n, long long m){
    sort(a.begin(),a.end());
    int min_diff = INT_MAX;
    for(int i=0;i<= n-m;i++){
        int curr_diff = a[i + m -1] - a[i];
        int min_diff = min(min_diff,curr_diff);
    }
    return min_diff;
    
    }   
};
